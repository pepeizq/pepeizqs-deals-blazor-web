@code {

    #nullable disable

    [Parameter]
    public int correosDeals { get; set; }

    [Parameter]
    public int correosApps { get; set; }

    private string dealsGoogleSearch = string.Empty;
    private string dealsCloudflare = string.Empty;
    private string dealsBing = string.Empty;

    private string appsGoogleSearch = string.Empty;
    private string appsCloudflare = string.Empty;
    private string appsBing = string.Empty;

    private string extensionChrome = string.Empty;
    private string extensionEdge = string.Empty;
    private string extensionFirefox = string.Empty;

    protected override void OnInitialized()
    {
        WebApplicationBuilder builder = WebApplication.CreateBuilder();

        dealsGoogleSearch = builder.Configuration.GetValue<string>("WebmasterDeals:GoogleSearch");
        dealsCloudflare = builder.Configuration.GetValue<string>("WebmasterDeals:Cloudflare");
        dealsBing = builder.Configuration.GetValue<string>("WebmasterDeals:Bing");

        appsGoogleSearch = builder.Configuration.GetValue<string>("WebmasterApps:GoogleSearch");
        appsCloudflare = builder.Configuration.GetValue<string>("WebmasterApps:Cloudflare");
        appsBing = builder.Configuration.GetValue<string>("WebmasterApps:Bing");

        extensionChrome = builder.Configuration.GetValue<string>("ExtensionDeals:Chrome");
        extensionEdge = builder.Configuration.GetValue<string>("ExtensionDeals:Edge");
        extensionFirefox = builder.Configuration.GetValue<string>("ExtensionDeals:Firefox");
    }
}
