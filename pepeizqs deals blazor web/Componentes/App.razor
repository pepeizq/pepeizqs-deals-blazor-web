<body class="cuerpo" style="margin: 0px;">
    <header style="height: var(--alturaCabecera); background-color: var(--fondoOscuro); z-index: 9999; position: sticky; top: 0; padding: 15px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="padding: 0px;">
            <div class="cabecera-poner">
                @if (Herramientas.RobotsUserAgents.EsBotVerificado(Context.Request.Headers.UserAgent.ToString()) == true)
                {
                    <component type="typeof(Componentes.Interfaz.Cabecera)" render-mode="ServerPrerendered" param-idioma="idioma" param-usuario="usuario" param-usuarioLogeado="usuarioLogeado" param-ubicacionEnlace="Context.Request.Path.ToString()" />
                }
                else
                {
                    <component type="typeof(Componentes.Interfaz.Cabecera)" render-mode="Server" param-idioma="idioma" param-usuario="usuario" param-usuarioLogeado="usuarioLogeado" param-ubicacionEnlace="Context.Request.Path.ToString()" />
                }
            </div>
        </nav>
    </header>

