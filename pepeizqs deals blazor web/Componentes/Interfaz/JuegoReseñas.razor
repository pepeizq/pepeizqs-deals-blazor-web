@code {

    #nullable disable

    [Parameter]
    public string usuarioId { get; set; }

    [Parameter]
    public string idioma { get; set; }

    [Parameter]
    public string userAgent { get; set; }

    [Parameter]
    public bool usuarioPatreon { get; set; }

    [Parameter]
    public bool usuarioAdmin { get; set; }

    [Parameter]
    public Juego juego { get; set; }

    [PersistentState] public JuegoAnalisisAmpliado reseñasAmpliadas { get; set; }
    [PersistentState] public List<JuegoAnalisisAmpliadoIdioma> reseñasRegiones { get; set; }
    private string idiomaReseñas = string.Empty;

    private bool cargado = false;

    protected override async Task OnInitializedAsync()
    {
        if (juego.IdSteam > 0 && DateTime.Today > juego?.Caracteristicas?.FechaLanzamientoSteam && Herramientas.Bots.UserAgentEsBot(userAgent) == false)
        {
            cargado = false;

            string idiomaSteam = "english";

            if (string.IsNullOrEmpty(idioma) == false)
            {
                foreach (var idioma2 in Herramientas.Idiomas.ListadoIdiomasGenerar())
                {
                    if (idioma2.SteamReseñas == true)
                    {
                        if (idioma2.Id.ToLower() == idioma.ToLower())
                        {
                            idiomaSteam = idioma2.SteamAPI;
                        }

                        foreach (var codigo in idioma2.Codigos)
                        {
                            if (codigo.ToLower() == idioma.ToLower())
                            {
                                idiomaSteam = idioma2.SteamAPI;
                            }
                        }
                    }
                }
            }

            idiomaReseñas = idiomaSteam;

            if (BaseDatos.Analisis.Buscar.DebeModificarse(juego.Id, idiomaSteam) == true)
            {
                APIs.Steam.SteamAnalisisAPI reseñas = await APIs.Steam.Juego.CargarDatosReseñas(juego.IdSteam, idiomaSteam);

                if (reseñas?.Reseñas != null)
                {
                    BaseDatos.Analisis.Insertar.Ejecutar(juego.Id, reseñas.Sumario.TotalPositivas, reseñas.Sumario.TotalNegativas, idiomaSteam, JsonSerializer.Serialize(reseñas.Reseñas));

                    reseñasAmpliadas = BaseDatos.Analisis.Buscar.Cargar(juego.Id, idiomaSteam);
                }
            }
            else
            {
                reseñasAmpliadas = BaseDatos.Analisis.Buscar.Cargar(juego.Id, idiomaSteam);
            }

            cargado = true;

            await InvokeAsync(StateHasChanged);
        }              
    }

    private async Task ReseñasIdioma(MouseEventArgs e, string idiomaSteam)
    {
        idiomaReseñas = idiomaSteam;

        if (idiomaReseñas != "global")
        {
            reseñasAmpliadas = await ReseñasCargarIdioma(idiomaReseñas);
        }
        else
        {
            reseñasRegiones?.Clear();

            Herramientas.Idiomas.ListadoIdiomasGenerar().ForEach(async (idioma2) => 
            {
                if (idioma2.SteamReseñas == true)
                {
                    JuegoAnalisisAmpliado reseñasRegion = await ReseñasCargarIdioma(idioma2.SteamAPI);
                    JuegoAnalisisAmpliadoIdioma reseñasRegion2 = new JuegoAnalisisAmpliadoIdioma();
                    reseñasRegion2.CantidadPositivos = reseñasRegion.CantidadPositivos;
                    reseñasRegion2.CantidadNegativos = reseñasRegion.CantidadNegativos;
                    reseñasRegion2.Idioma = idioma2.SteamAPI;

                    if (reseñasRegiones == null)
                    {
                        reseñasRegiones = new List<JuegoAnalisisAmpliadoIdioma>();
                    }

                    reseñasRegiones.Add(reseñasRegion2);

                    await InvokeAsync(StateHasChanged);
                }
            });
        }

        await InvokeAsync(StateHasChanged);
    }

    private async Task<JuegoAnalisisAmpliado> ReseñasCargarIdioma(string idiomaSteam)
    {
        if (BaseDatos.Analisis.Buscar.DebeModificarse(juego.Id, idiomaSteam) == true)
        {
            APIs.Steam.SteamAnalisisAPI reseñas = await APIs.Steam.Juego.CargarDatosReseñas(juego.IdSteam, idiomaSteam);

            if (reseñas?.Reseñas != null)
            {
                BaseDatos.Analisis.Insertar.Ejecutar(juego.Id, reseñas.Sumario.TotalPositivas, reseñas.Sumario.TotalNegativas, idiomaSteam, JsonSerializer.Serialize(reseñas.Reseñas));

                return BaseDatos.Analisis.Buscar.Cargar(juego.Id, idiomaSteam);
            }
        }
        else
        {
            return BaseDatos.Analisis.Buscar.Cargar(juego.Id, idiomaSteam);
        }

        return null;
    }

}
