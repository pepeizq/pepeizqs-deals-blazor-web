					i += 1;
				}
			}
		}

		if (encontrado == false)
		{
			if (idsLista == null)
			{
				idsLista = new List<string>();
			}

			idsLista.Add(nuevaId);
		}
		else
		{
			idsLista.RemoveAt(i);
		}

		ids = null;

		foreach (var id in idsLista)
